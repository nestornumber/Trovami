<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trovami_background"
    tools:context=".Ajustes_EditarNombres">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAjustes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/inter_semibold_style"
                android:text="Ajustes"
                android:textAlignment="center"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAjustes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/inter_regular_style"
                android:text="Editar Nombres"
                android:textAlignment="center"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes1" />

            <TextView
                android:id="@+id/tvAjustes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/inter_regular_style"
                android:text="DATOS ACTUALES"
                android:textAlignment="center"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes2" />

            <TextView
                android:id="@+id/tvAjustes5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/inter_regular"
                android:text="nombredeusuario"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_large"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes4"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes4" />

            <TextView
                android:id="@+id/tvAjustes4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/inter_regular"
                android:text="Nombre de usuario"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_medium"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes3"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes3" />

            <TextView
                android:id="@+id/tvAjustes6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/inter_regular_style"
                android:text="MODIFICAR NOMBRES"
                android:textAlignment="center"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes5" />


            <TextView
                android:id="@+id/tvAjustes7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/inter_regular_style"
                android:text="Nombres"
                android:textAlignment="center"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_medium"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes6"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes6" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/trovami_edit_text_style"
                android:fontFamily="@font/inter_regular_style"
                android:hint="Nuevo nombre completo"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/trovami_textGray"
                android:textColorHint="@color/trovami_textGray"
                android:textSize="@dimen/font_size_smallMedium"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes7"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes7" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/trovami_edit_text_style"
                android:fontFamily="@font/inter_regular_style"
                android:hint="Nuevo nombre de usuario"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/trovami_textGray"
                android:textColorHint="@color/trovami_textGray"
                android:textSize="@dimen/font_size_smallMedium"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes7"
                app:layout_constraintTop_toBottomOf="@+id/editText1" />


            <TextView
                android:id="@+id/tvAjustes8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/inter_regular_style"
                android:text="Contraseña"
                android:textAlignment="center"
                android:textColor="@color/trovami_textGray"
                android:textSize="@dimen/font_size_medium"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes6"
                app:layout_constraintTop_toBottomOf="@+id/editText2" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/trovami_edit_text_style"
                android:fontFamily="@font/inter_regular_style"
                android:hint="Escribe la contraseña para guardar"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/trovami_textGray"
                android:textColorHint="@color/trovami_textGray"
                android:textSize="@dimen/font_size_smallMedium"
                app:layout_constraintStart_toStartOf="@+id/tvAjustes8"
                app:layout_constraintTop_toBottomOf="@+id/tvAjustes8" />

            <Button
                android:id="@+id/button1"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/trovami_btn"
                android:drawableLeft="@drawable/editobj_save_icon_style"
                android:fontFamily="@font/inter_regular_style"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="GUARDAR"
                android:textColor="@color/trovami_textGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
        app:itemRippleColor="@color/trovami_buttonBeigeStroke"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"

        app:itemBackground="@color/trovami_buttonBeigeBackground"
        app:itemIconTint="@color/trovami_textGreen"
        app:itemTextColor="@color/trovami_textGreen"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>