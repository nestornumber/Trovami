<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trovami_background"
    tools:context=".MostrarResultados">

    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ajustes_icon_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/trovami_btn_rounded"
        android:drawableRight="@drawable/buscar_icon_style"
        android:fontFamily="@font/inter_regular_style"
        android:hint="¿Qué desea buscar?"
        android:padding="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textAlignment="textStart"
        android:textColor="@color/trovami_textGray"
        android:textColorHint="@color/trovami_textGray"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/trovami_card_result"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1">

        <!-- Primer Texto -->
        <TextView
            android:id="@+id/objetoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Objeto"
            android:textColor="@color/trovami_textGray"
            android:fontFamily="@font/inter_bold_style"
            android:textSize="18sp" />

<!--        &lt;!&ndash; Segundo Texto &ndash;&gt;-->
<!--        <TextView-->
<!--            android:id="@+id/segundoTexto"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/objetoNombre"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:text="Segundo Texto"-->
<!--            android:textSize="16sp" />-->

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/objetoNombre"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen" />

        <!-- Tercer Texto -->
        <TextView
            android:id="@+id/objetoUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagen"
            android:layout_marginTop="8dp"
            android:text="Ubicación"
            android:textSize="16sp" />

        <!-- Botón Izquierdo -->
        <Button
            android:id="@+id/botonIzquierdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trovami_btn_editar"
            android:fontFamily="@font/inter_regular_style"
            android:textColor="@color/trovami_textGray"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_below="@id/objetoUbicacion"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Editar" />

        <!-- Botón Derecho -->
        <Button
            android:id="@+id/botonDerecho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trovami_btn_lotome"
            android:fontFamily="@font/inter_regular_style"
            android:textColor="@color/trovami_textWhite"
            android:textAllCaps="false"
            android:padding="10dp"
            android:layout_below="@id/objetoUbicacion"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Lo Tomé" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>